@model CityViewModel
@{
    int id = Model.Id;
}

<div class="card">
    <div class="card-header">
        YENİ
    </div>
    <div class="card-body">
        <form class="row g-3" asp-controller="City" asp-action="Update">
            <div class="col-md-12">
                <label asp-for="Name" class="form-label">Adı</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="Status" class="form-check-input" value="true">
                    <label asp-for="Status" class="form-check-label">
                        Aktif
                    </label>
                </div>
            </div>
            <div class="col-12">
                <input type="submit" class="btn btn-success" value="Kaydet" />
                <input type="hidden" asp-for="Id"/>
            </div>
        </form>
    </div>
    <div class="card-footer text-body-secondary">
        <span class="badge text-secondary">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</span>
    </div>
</div>
